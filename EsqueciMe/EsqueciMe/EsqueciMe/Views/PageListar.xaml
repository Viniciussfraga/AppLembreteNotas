<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EsqueciMe.Views.PageListar" Title="Listar Notas">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Exibir notas favoritas:" FontSize="Medium"/>
                <Switch x:Name="swFavorito" 
                    HorizontalOptions="Start"
                    Toggled="swFavorito_Toggled"/>
            </StackLayout>
            <ListView x:Name="ListaNotas" 
                      HasUnevenRows="True" 
                      SeparatorColor="Red" 
                      Margin="15"
                      ItemSelected="ListaNotas_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Titulo,StringFormat='Título: {0}'}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>